
@{
    ViewBag.Title = "NeuralNetwork";
}


<section class="model-section">

    <div class="start-group inline">
        <button class="refresh-btn icon icon-loop2"></button>

        <button class="start-btn icon icon-play3"></button>
        <div class="running-group inline">
            <label class="label">Epochs</label>
            <span>0</span>
        </div>
    </div>

</section>

@Html.Partial("Partials/_ApiDetails")



<div class="model-inspector">
    <section class="inspector-section">
        <div class="inspector-header">
            <span>Input file</span>
            <i class="glyphicon glyphicon-info-sign"></i>
        </div>
        <div class="container inspector-content">

            <div class="input-group">
                <div><label>Training set</label></div>
                <label for="file-upload" class="custom-file-upload">
                    <i class="glyphicon glyphicon-file"></i>Upload file
                </label>
                <input class="file-upload-def" id="file-upload" type="file" />
            </div>

            <div class="input-group">
                <label>Column separator</label>
                <select id="column-separator" class="form-control">
                    <option value="0">Semicolon ; </option>
                    <option value="1">Comma , </option>
                    <option value="2">Dash - </option>
                </select>
            </div>

            <div class="input-group">
                <label>Decimal separator</label>
                <select id="deciamal-separator" class="form-control">
                    <option value="0">Dot . </option>
                    <option value="1">Comma , </option>
                </select>
            </div>



        </div>
    </section>

    <section class="inspector-section">
        <div class="inspector-header">
            Layer parameters
            <i class="glyphicon glyphicon-info-sign"></i>
        </div>
        <div class="container inspector-content">

            <div class="input-group">
                <label for="input-layer">Input</label>
                <input id="input-layer" class="form-control" type="number" />
            </div>


            <div class="input-group">
                <label for="hidden-layer">Hidden</label>
                <input id="hidden-layer" class="form-control" type="number" />
            </div>


            <div class="input-group">
                <label for="output-layer">Output</label>
                <input id="output-layer" class="form-control" type="number" />
            </div>
        </div>

    </section>

    <section class="inspector-section">
        <div class="inspector-header">
            Learning parameters
            <i class="glyphicon glyphicon-info-sign"></i>
        </div>
        <div class="container inspector-content">

            <div class="input-group">
                <label for="max-epochs">Max epochs</label>
                <input id="max-epochs" class="form-control" type="number" />
            </div>


            <div class="input-group">
                <label for="learning-rate">Learning rate</label>
                <input id="learning-rate" class="form-control" type="number" />
            </div>

            <div class="input-group">
                <label for="momentum">Momentum</label>
                <input id="momentum" class="form-control" type="number" />
            </div>


            <div class="input-group">
                <label for="weight-decay">Weight decay</label>
                <input id="weight-decay" class="form-control" type="number" />
            </div>

        </div>

    </section>


</div>




@section Scripts {
    <script>

        $(document).ready(function () {
            gom.create.init($("#api-details"));
        });
    </script>

}

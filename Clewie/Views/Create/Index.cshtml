<div class="model-container">
    @Html.Partial("_model-tile")
    @Html.Partial("_model-tile")
    @Html.Partial("_model-tile")
    @Html.Partial("_model-tile")
</div>

@section Scripts  {
    <script>
        $(document).ready(function () {

            $(".model-container").masonry({
                itemSelector: ".model-tile",
                horizontalOrder: true,
            });

            $(".info-container .btn-hint").on("click", function () {
                //console.log("hint click", $(this).siblings("info"));
                $(this).toggleClass("active");
                $(this).closest(".info-container").toggleClass("active");
                $(".model-container").masonry();
            });

        });
    </script>
}
